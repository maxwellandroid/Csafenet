<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ViewAnsweredQuestionActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/colorPrimary"
            android:theme="@style/AppTheme.AppBarOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="2dp"
                    android:onClick="back"
                    android:src="@drawable/letarroww" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:gravity="center"
                    android:text="@string/safe"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>

        </android.support.design.widget.AppBarLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="My Observation"
            android:textColor="@color/black"
            android:textSize="8pt"
            android:id="@+id/text_screen_name"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Add"
            android:onClick="gotonew"
            android:textColor="@color/colorPrimary"
            android:textSize="6pt"
            android:padding="6dp"
            android:id="@+id/text_new_observation"
            android:textStyle="bold" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/rounded_edittext"
            android:padding="6dp"
            android:textSize="6pt"
            android:layout_margin="10dp"
            android:editable="false"
            android:onClick="onClic"
            android:gravity="center"
      android:id="@+id/date"
            android:layout_gravity="center"
            android:focusable="false"
            android:hint="Date"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_edittext_blue">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="Item"
                android:padding="4dp"
                android:gravity="center"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@drawable/rounded_edittext_blue"
                android:textSize="14sp"
                android:text="Question"
                android:padding="4dp"
                android:gravity="center"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext_blue"
                android:textSize="14sp"
                android:text="Date"
                android:padding="4dp"
                android:gravity="center"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:background="@drawable/rounded_edittext_blue"
                android:textSize="14sp"
                android:text="Remark"
                android:padding="4dp"
                android:gravity="center"
                android:textColor="@color/white"/>

        </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/list_questions"
            android:visibility="gone"
            ></ListView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext"
            android:text="No Items Available"
            android:textSize="14sp"
            android:id="@+id/text_no_items"
            android:visibility="gone"
            android:textColor="@color/black"/>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_marginTop="12dp">

            <HorizontalScrollView
                android:id="@+id/horizontalView"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal|vertical"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dip">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/table_entries"
                android:stretchColumns="*">


            </TableLayout>
            </HorizontalScrollView>

        </ScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>